<assembly
  xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>sysml</id>
  <includeBaseDirectory>false</includeBaseDirectory>
  <includeSiteDirectory>false</includeSiteDirectory>
  <fileSets>
    <fileSet>
      <outputDirectory>src</outputDirectory>
      <directory>src/main/java</directory>
      <excludes>
        <exclude>sysml/_ast/</exclude>
        <exclude>sysml/blockdefinitiondiagram._symboltable/</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <outputDirectory>hwc</outputDirectory>
      <directory>src/main/java</directory>
      <includes>
        <include>sysml/_ast/</include>
        <include>sysml/blockdefinitiondiagram._symboltable/</include>
      </includes>
    </fileSet>
    <fileSet>
      <outputDirectory />
      <directory>src/main/grammars</directory>
    </fileSet>
    <fileSet>
      <outputDirectory />
      <directory>src/main/resources</directory>
    </fileSet>
  </fileSets>
</assembly>
