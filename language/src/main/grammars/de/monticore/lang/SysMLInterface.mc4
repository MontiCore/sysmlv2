package de.monticore.lang;

component grammar SysMLInterface
    extends de.monticore.lang.SysMLBasis {

  symbol scope InterfaceDef implements SysMLType =
    Modifier "interface" "def" Name Specialization* ("(" (SysMLParameter || ",")* ")")?
    ("{"
      ("end" src:MCQualifiedName ";"| SysMLElement)*
    "}" | ";") ;//TODO end definieren f√ºr interface

  symbol scope InterfaceUsage implements SysMLElement =
    Modifier "interface" (Name Specialization* "connect" )? source:MCQualifiedName "to" target:MCQualifiedName ";" ;


}
